@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "Index";
}

<h2>Список ролей</h2>
<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-action="Delete" asp-controller="Roles" asp-route-id="@role.Id">
                    <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                </form>
            </td>
        </tr>

    }
</table>
<a asp-action="Create" asp-controller="Roles">Добавить роль</a>
<a asp-action="UserList" asp-controller="Roles">Список пользователей</a>